<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Car Blog</title>
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="shortcut icon" href="/images/favicon.png" type="image/png">
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar">
    <div class="navbar-container">
      <a href="/" class="navbar-logo">CarBlog</a>
      <ul class="navbar-menu">
        <li><a href="/">Home</a></li>
        <li><a href="#">Reviews</a></li>
        <li><a href="#">News</a></li>
        <li><a href="https://github.com/iamrahul-l/Car-blog-REST-API">Project Documentation</a></li>
      </ul>
    </div>
  </nav>

  <!-- Hero Section with Sliding Images -->
  <div class="hero">
    <div class="slides">
      <img src="/images/car1.jpg" alt="Car 1" class="slide active">
      <img src="/images/car2.jpg" alt="Car 2" class="slide">
      <img src="/images/car3.jpg" alt="Car 3" class="slide">
    </div>
    <div class="hero-overlay">
      <h1>Welcome to CarBlog</h1>
      <p>Your ultimate source for car reviews, news, and tips.</p>
    </div>
  </div>

  <!-- Blog Content -->
  <div class="container">
    <h2>
      Latest Posts
      <a id="newPostBtn" href="/new">New Post</a>
    </h2>
    <ul id="postsList">
      <% posts.forEach(post => { %>
        <li>
          <h3><%= post.title %></h3>
          <small>By: <%= post.author %></small>
          <p><%= post.content %></p>
          <small><%= new Date(post.date).toLocaleDateString() %></small>
          <a class="edit" href="/edit/<%= post.id %>">Edit</a>
          <a class="delete" href="/api/posts/delete/<%= post.id %>">Delete</a>
        </li>
      <% }); %>
    </ul>
  </div>

  <!-- Footer -->
  <footer class="footer">
    <p>&copy; 2024 CarBlog. All rights reserved.</p>
  </footer>

  <script src="/scripts/carousel.js"></script>
</body>
</html>
